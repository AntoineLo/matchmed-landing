.banner {
  text-align: center;
  color: white;
  height: 100vh;
  background-size: cover !important;
  @media (min-width: 768px) {
    background: linear-gradient(-225deg, rgba(35, 35, 35, 0.6) 0%, rgba(0, 0, 0, 0.6) 50%), url(<%= asset_path 'Background_v2.jpg' %>) no-repeat center center fixed;
  }
  @media (max-width: 767px) {
    background-image: linear-gradient(-225deg, rgba(35, 35, 35, 0.6) 0%, rgba(0, 0, 0, 0.6) 50%), url(<%= asset_path 'Background_v2.jpg' %>);
  }
  background-position: center;
}

