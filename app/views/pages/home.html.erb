<div class="container-fluid" id="home_container">
  <div class="row homepage">
    <div class="banner" id="#home_banner">
      <%= render 'shared/navbar' %>
      <div class="catchline text-center">
        <h1>Le remplacement médical à portée de main</h1>
      </div>

      <div class="search-box" id="search-box-practice">
        <div class="text-center">
          <h4 class="be-informed">Besoin d'un remplaçant ou d'un remplacement ? Laissez vos coordonnées et nos équipes vous rappellent immédiatement !</h4>
        </div>

        <%= simple_form_for(@suscriber) do |f| %>
          <%= f.error_notification %>

          <%= f.input_field :email, class: "search-input", label: false, placeholder: "Adresse email...", id: "suscriber_email", style: "font-size: 13px;" %>
          <%= f.button :submit, method: :post, value: "Me prévenir du lancement", class: "btn btn-primary btn-lg btn-search-home", style: "font-size: 15px !important;" %>
        <% end %>

      <div class="text-center hidden-xs" style="padding-top: 30px;">
        <button type="submit" class="btn btn-primary btn-lg btn-search-home contact-us" data-toggle="modal" data-target="#myModal">Vous ne pouvez pas attendre ? Contactez-nous !</button>
      </div>

      <div class="text-center hidden-sm hidden-md hidden-lg" style="padding-top: 30px;">
        <p style="font-size: 13px;">Vous ne pouvez pas attendre ? </p>
        <button type="submit" class="btn btn-primary btn-lg btn-search-home contact-us" data-toggle="modal" data-target="#myModal">Contactez-nous !</button>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Une demande urgente ?</h4>
            </div>
            <div class="modal-body text-center">
              <p class="text-center">Appelez-nous au <span class="phone-number">06 00 00 00 00</span></p>
              <p class="text-center">ou</p>
              <p class="text-center">Laissez-nous vous rappeler :</p>
              <%= simple_form_for(@suscriber) do |f| %>
                <%= f.error_notification %>
                <%= f.input_field :name, class: "search-input", label: false, placeholder: "Votre nom", id: "suscriber_name", style: "font-size: 13px; line-height: 30px;" %>
                <%= f.input_field :phone, class: "search-input", label: false, placeholder: "Votre numéro", id: "suscriber_phone", style: "font-size: 13px; line-height: 30px;" %>
            </div>
            <div class="modal-footer">
                <%= f.button :submit, method: :post, value: "Envoyer", class: "btn btn-primary" %>
              <% end %>
              <button type="button" class="btn btn-default" data-dismiss="modal" style="border: 1px solid #CCC;">Annuler</button>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

